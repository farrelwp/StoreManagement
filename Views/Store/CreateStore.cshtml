@model Store
@{
    ViewData["Title"] = "CreateStore";
}
<h2>Create New Store</h2>

@Html.ActionLink("Show All Stores", "All", "Store")

@using (Html.BeginForm("StoreCreated","Store", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(n => n.Name)
        @Html.TextBoxFor(n => n.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(n=>n.Name, "", new{ @class="text-danger"})
    </div>

    <div class="form-group">
        @Html.LabelFor(n => n.Address)
        @Html.TextBoxFor(e => e.Address, new { @class = "form-control" })
        @Html.ValidationMessageFor(n=>n.Address, "", new{ @class="text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(n => n.FoundingYear)
        @Html.TextBoxFor(a => a.FoundingYear, new { @class = "form-control", @type="date" })
    </div>

    <div class="form-group">
        @Html.LabelFor(n => n.NumberOfEmployees)
        @Html.TextBoxFor(a => a.NumberOfEmployees, new { @class = "form-control"})
    </div>


    <button type="submit" class="btn btn-success">Create Store</button>
}

