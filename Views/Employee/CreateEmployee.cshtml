@model Employee
@{
    ViewData["Title"] = "CreateEmployee";
}
<h2>Create a new Employee</h2>

@Html.ActionLink("Show All Employees", "AllEmployees", "Employee")

@using (Html.BeginForm("EmployeeCreated", "Employee", FormMethod.Post))
            {
    <div class="form-group">
        @Html.LabelFor(n => n.BranchId)
        @Html.DropDownListFor(n => n.BranchId, new SelectList(ViewBag.Branches, "Id", "Location"), "Select a Branch", new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.BranchId, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(n => n.FullName)
        @Html.TextBoxFor(n => n.FullName, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.FullName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(n => n.NickName)
        @Html.TextBoxFor(n => n.NickName, new { @class = "form-control" })

    </div>

    <div class="form-group">
        @Html.LabelFor(n => n.EmailAddress)
        @Html.TextBoxFor(e => e.EmailAddress, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.EmailAddress, "", new { @class = "text-danger" })


    </div>

    <div class="form-group">
        @Html.LabelFor(n => n.Age)
        @Html.TextBoxFor(a => a.Age, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.Age, "", new { @class = "text-danger" })


    </div>

    <div class="form-group">
        @Html.LabelFor(n => n.Birthday)
        @Html.TextBoxFor(b => b.Birthday, new { @class = "form-control", @type="date" })
    </div>

    <div class="form-group">
        @Html.LabelFor(n => n.Role)
        @Html.TextBoxFor(g => g.Role, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.Role, "", new { @class = "text-danger" })


    </div>

    <button type="submit" class="btn btn-success">Create Employee</button>

}


